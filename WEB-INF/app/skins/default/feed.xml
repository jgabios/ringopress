<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
	xmlns:content="http://purl.org/rss/1.0/modules/content/"
	xmlns:wfw="http://wellformedweb.org/CommentAPI/"
	xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
	xmlns:slash="http://purl.org/rss/1.0/modules/slash/"
	>

<channel>
	<title><% page.title %></title>
	<atom:link href="http://<% domain %>/feed" rel="self" type="application/rss+xml" />
	<link>http://<% domain %></link>
	<description><% blog.description%></description>
	<lastBuildDate><% lastBuildDate %></lastBuildDate>

	<generator>ringojs custom js code</generator>
	<language>en</language>
	<sy:updatePeriod>hourly</sy:updatePeriod>
	<sy:updateFrequency>1</sy:updateFrequency>
        <% for post in <% posts %> render 'xmlpostskin' %>
</channel>
</rss>

<% subskin 'xmlpostskin'%>
<item>
    <title><% post.title %></title>
    <link>http://<% domain %>/post/<% post.url %></link>
    <guid>http://<% domain %>/post/<% post.url %></guid>
    <comments>http://<% domain %>/post/<% post.url %>#comments</comments>
    <description><% post.getShortDescription() %></description>
    </item>